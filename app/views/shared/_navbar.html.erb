    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0 align-items-center">
        <% if user_signed_in? %>

          <li class="nav-item active">
            <%= link_to "Discover", discover_movies_path %>
          </li>

          <li class="nav-item">
            <%= link_to "My Lists", my_lists_path %>
          </li>
          <li class="mr-2">
            <div id="search-bar" data-controller='search-bar'>
              <%= form_tag movies_path, method: :get, class: 'input-group align-items-center justify-content-between' do %>
                <%= text_field_tag :query,
