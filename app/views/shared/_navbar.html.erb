                <div class="input-group-prepend">
                  <%= button_tag class: "search px-2", data: { search_bar_target: 'searchBtn' }, name: 'commit', value: 'search' do %>
                    <i class="fas fa-search text-lighter-gray" aria-hidden="true"></i>
