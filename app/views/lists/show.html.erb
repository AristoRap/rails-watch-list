<div class="jumbotron jumbotron-fluid banner">
  <div class="container text-center">
    <h1 class="display-4"><%= @list.name %> Movies</h1>
    <%# <p class="lead">Browse, organize and save your movies</p> %>
  </div>
</div>



<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Movies</h1>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn button-purple' %>
  </div>
  <div class="cards">
    <% @list.movies.each do |movie|%>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="card-category card-movie" style="background-image: url(<%=movie.poster_url%>)">
          <h2><%= movie.title%></h2>
          <p><%= movie.overview%></p>
      </div>
    <% end %>
  </div>
</div>
