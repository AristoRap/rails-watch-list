<div class="jumbotron jumbotron-fluid banner">
  <div class="container text-center">
    <h1 class="display-4">WatchList</h1>
    <p class="lead">Browse, organize and save your movies</p>
  </div>
</div>



<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>My Lists</h1>
    <%= link_to 'Add a new list', new_list_path, class: 'btn button-purple' %>
  </div>

  <% if @lists.length.zero? %>
    <p class='lead'>No lists created.</p>
  <% else %>
    <div class="cards">
      <% @lists.each do |list|%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
          <%= link_to list.name, list_path(list)%>
        </div>
      <% end %>
  <% end %>
  </div>
</div>
