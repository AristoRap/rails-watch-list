<div class="container">
  <div class="grid-main">
    <div>
      <h2>Featured</h2>
    </div>

    <div>
      <div class="d-flex justify-content-between">
      <h2>My Lists</h2>
      <%= link_to 'Add a new list', new_list_path, class: 'btn button-orange' %>
      </div>
      <% if @lists.length.zero? %>
        <p class='lead'>No lists created.</p>
      <% else %>
        <div class="d-flex flex-column justify-content-between">
          <% @lists.each do |list|%>
            <div class="card-category card-list">
              <%= link_to list.name, list_path(list)%>
              <%= link_to "Remove", list_path(list), method: :delete, data: { confirm: "Are you sure?"}, class: 'button-red'%>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
