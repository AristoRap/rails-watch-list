<div class="wrapper">
  <h2>Most popular</h2>

    <div class="swiper mySwiper">
      <div class="swiper-wrapper p-1">
        <% @movies.each do |movie| %>
          <%= image_tag "https://www.themoviedb.org/t/p/original#{movie['poster_path']}", data: { id: movie['id'] }, data: { toggle: "modal", target: "#exampleModalCenter#{movie['id']}" }, class: 'swiper-slide movie-images rounded'%>
        <% end %>
      </div>
      <div class="swiper-button-next swiper-nav text-white"></div>
      <div class="swiper-button-prev swiper-nav text-white"></div>
    </div>
    <% @movies.each do |movie| %>
      <%= render 'modal', movie: movie, favorite: @favorite %>
    <% end %>
</div>
